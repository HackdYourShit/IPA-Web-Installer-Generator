<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <title>[[BUNDLE-DISPLAY-NAME]]</title>
        <style type="text/css">
            .icon
            {
                white-space:    nowrap;
                text-align:     center;
                vertical-align: middle;
                width: 174px;
            }

            .title
            {
                color: #FFFFFF;
                font-size: 24pt;
                font-weight: bold;
                font-family: calibri,verdana,geneva,sans-serif;
                text-shadow: 2px 2px 3px #000000;
            }

            td.title
            {
                border-bottom: 1px solid #C0C0C0;
                padding: 4pt;
            }

            td.info
            {
                padding: 4pt;
                padding-top: 10pt;
            }

            td.stamp_header
            {
                text-align: left;
                vertical-align: top;
            }

            td.stamp_body
            {
                text-align: left;
                vertical-align: top;
                width: auto;
                padding-left: 7px;
            }

            td.stamp_fill
            {
            }

            td.separator
            {
                padding-top: 10px;
            }

            div.stamp
            {
            }

            .stamp
            {
                color: #909090;
                font-size: 18px;
                font-family: verdana,geneva,sans-serif;
            }

            .stamp_value
            {
                color: #96AEB7;
                font-size: 18px;
                font-family: verdana,geneva,sans-serif;
            }

            .install_button
            {
                padding-left: 32px;
                padding-right: 32px;
                width: 240px;
                height: 58px;
                background: transparent url('[[BUTTON-URL]]') center center no-repeat;
                background-size:240px 58px;
                text-decoration: none;
            }

            .install_text
            {
                padding-top: 10px;

                vertical-align: middle;
                text-align: center;

                text-decoration: none;
                text-shadow: 3px 3px 10px #1F3118;
                text-transform:uppercase;

                font-family: verdana,geneva,sans-serif;
                font-weight: bold;
                font-size: 28px;
                color: white;
            }

            a:link {color:#C0C0C0;}
            a:visited {color:#657D94;}
            a:hover {color:#FFFFFF;}
            a:active {color:#47ABCF;}
        </style>
    </head>
    <body style="background-color: #003447;">
        <div style="text-align: center; vertical-align: top;">
            <div>
                <table align="center" border="0" cellpadding="0" cellspacing="0">
                    <tbody>
                        <!-- ROW START -->
                        <tr>
                            <td rowspan="2" class="icon">
                                <img alt="" src="[[ICON-LARGE-URL]]" style="width: 144px; height: 144px;" />
                            </td>
                            <td colspan="2" class="title" style="text-align: left; vertical-align: top;">
                                <div>
                                    <span class="title">[[BUNDLE-DISPLAY-NAME]]</span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="info">
                                <table align="left" border="0" cellpadding="0" cellspacing="0">
                                    <tbody>
                                        <tr>
                                            <td class="stamp_header">
                                                <span class="stamp">Bundle id:</span>
                                            </td>
                                            <td class="stamp_body">
                                                <span class="stamp_value">[[BUNDLE-ID]]</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="stamp_header">
                                                <span class="stamp">Version:</span>
                                            </td>
                                            <td class="stamp_body">
                                                <span class="stamp_value">[[BUNDLE-VERSION]]</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="stamp_header">
                                                <span class="stamp">Platform:</span>
                                            </td>
                                            <td class="stamp_body">
                                                <span class="stamp_value">[[BUILD-PLATFORM]]</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="stamp_header">
                                                <span class="stamp">Build date:</span>
                                            </td>
                                            <td class="stamp_body">
                                                <span class="stamp_value">[[BUILD-DATE]]</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            <td rowspan="1" >
                                <a href="itms-services://?action=download-manifest&url=[[PLIST-URL]]" style="text-decoration: none">
                                    <div class="install_button">
                                        <div class="install_text">Install</div>
                                    </div>
                                </a>
                            </td>
                        </tr>
                    <!-- ROW END -->
                    <!-- ROW SEPARATOR START -->
                        <tr>
                            <td colspan="3" class="separator">
                                <br />
                            </td>
                        </tr>
                    <!-- ROW SEPARATOR END -->
                    </tbody>
                </table>
            </div>
        </div>
        <div>
            <p></p>
            <p>
                <center>
                    <span class="stamp">
                        Tap here to install <a href="http://ftp.artifexmundi.com/Departments/Deployment/Certificate/ArtifexMundiCA.crt">https server certificate</a>.<br />
                        Renew <a href="https://developer.apple.com/ios/manage/provisioningprofiles/index.action">profisioning profile here</a>.
                    </span>
                </center>
            </p>
        </div>
    </body>
</html>

